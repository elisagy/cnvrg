<h1>New Car</h1>
<%= form_with scope: :car, url: cars_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :driverName %><br>
    <%= form.text_field :driverName %>
  </p>
 
  <p>
    <%= form.label :type %><br>
    <%= form.text_field :type %>
  </p>
 
  <p>
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </p>
 
  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </p>

  <p>
    <%= form.label :drivers %><br>
    <%= form.collection_select :drivers_ids, Driver.all, :id, :name, { :include_blank => false }, { :multiple => true } %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', cars_path %>